@model Roundtable.Web.ViewModels.Location.LocationIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Location</h2>

<a href="@Url.Action("Create")" class="btn btn-primary btn-sm pull-right" style="margin-bottom: 10px"><span class="glyphicon glyphicon-plus"></span> Create Location</a>

<table class="table table-striped">
    @foreach (var loc in Model.Locations)
    {
        <tr>
            <td>@loc.Name</td>
            <td>
                <div class="pull-right">
                    <a href="@Url.Action("Edit", new { id = loc.LocationId})" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-edit"></span> Edit</a>
                </div>
            </td>
        </tr>
    }
</table>

